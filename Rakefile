require 'rubygems'
require 'rake'
require 'jeweler'

Jeweler::Tasks.new do |gem|
  gem.name        = "pacruft"
  gem.summary     = %Q{ Pacruft finds old packages. }
  gem.description = %Q{ My looking at the mtime of packages' owned
                        files, pacruft tried to show you packages you
                        haven't used in a while and could probaly do
                        without. }
  gem.email       = "pbrisbin@gmail.com"
  gem.authors     = ["Patrick Brisbin"]
end
Jeweler::RubygemsDotOrgTasks.new
